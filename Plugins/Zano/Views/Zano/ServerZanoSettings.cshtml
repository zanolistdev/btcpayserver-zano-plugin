            <div class="card my-2">
                <h3 class="card-title p-2">Wallet directory (optional)</h3>
                <div class="form-group p-2">
                    <label class="form-label" for="WALLET_DIR">Wallet directory</label>
                    <input class="form-control" asp-for="WALLET_DIR" placeholder="/data/zano-wallets" />
                </div>
            </div>

            <div class="d-flex gap-2">
                <button name="command" value="save" class="btn btn-primary" type="submit">Save</button>
                <button name="command" value="test" class="btn btn-secondary" type="submit">Test connection</button>
            </div>
        </form>
    </div>
</div>


