@model BTCPayServer.Plugins.Zano.Controllers.ZanoServerSettings
@{
    ViewData.SetActivePage("Zano", "Zano Server Settings", "Zano");
    Layout = "_Layout";
}

<partial name="_StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-action="Settings" asp-controller="UIServerZano" class="mt-4">
            <div class="card my-2">
                <h3 class="card-title p-2">ZANO connection</h3>
                <div class="form-group p-2">
                    <label class="form-label" for="ZANO_DAEMON_URI">Daemon URI</label>
                    <input class="form-control" asp-for="ZANO_DAEMON_URI" placeholder="http://host:11811/" />
                </div>
                <div class="form-group p-2">
                    <label class="form-label" for="ZANO_WALLET_DAEMON_URI">Wallet RPC URI</label>
                    <input class="form-control" asp-for="ZANO_WALLET_DAEMON_URI" placeholder="http://host:11812/" />
                </div>
                <div class="form-group p-2">
                    <label class="form-label" for="ZANO_DAEMON_USERNAME">Daemon Username</label>
                    <input class="form-control" asp-for="ZANO_DAEMON_USERNAME" />
                </div>
                <div class="form-group p-2">
                    <label class="form-label" for="ZANO_DAEMON_PASSWORD">Daemon Password</label>
                    <input class="form-control" asp-for="ZANO_DAEMON_PASSWORD" type="password" />
                </div>
            </div>

